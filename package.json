{
  "name": "ts-validator",
  "scripts": {
    "lint": "tslint -p .",
    "test": "jest",
    "build": "rollup -c",
    "watch": "rollup -c -w"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "testRegex": ".*\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "typescript": "^3.0.3"
  },
  "devDependencies": {
    "@types/jest": "^22.1.2",
    "@types/node": "^9.4.5",
    "app-module-path": "^2.2.0",
    "jest": "^23.6.0",
    "rollup": "^0.65.2",
    "rollup-plugin-typescript2": "^0.17.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.2.1"
  },
  "repository": "https://github.com/seedtray/ts-validator.git"
}
