{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "paths": {
      "*": [
        "./*",
        "../node_modules/*"
      ]
    },
    "outDir": "build/",
    "strict": true,
    "baseUrl": "./src/"
  }
}
